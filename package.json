        "style-loader": "^3.3.1",
        "terser-webpack-plugin": "5.3.10",
        "ts-jest": "^29.1.2",
        "ts-loader": "9.5.1",
        "ts-node": "^10.9.1",
        "typescript": "5.4.5",
        "vite": "^5.2.10",
        "@simonbackx/vite-svg-2-webfont": "^3.3.0",
        "vue-loader": "15.11.1",
        "vue-template-compiler": "^2.6.14",
        "vue-tsc": "^2.0.14",
        "wait-on": "^7.2.0",
        "webfonts-loader": "8.0.1",
        "webpack": "5.91.0",
        "webpack-cli": "5.1.4",
        "webpack-dev-server": "5.0.4",
        "webpack-merge": "^5.10.0"
    },
    "resolutions": {
