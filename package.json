{
    "name": "stamhoofd",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "frontend/app/*",
        "frontend/shared/*",
        "backend/app/*",
        "backend/shared/*",
        "shared/*",
        "*",
        ".yalc/@*/*",
        ".yalc/*"
    ],
    "license": "AGPL-3.0-only",
    "scripts": {
        "dev": "concurrently -r 'yarn build:shared:watch' 'lerna run dev --stream --parallel'",
        "test": "lerna run test",
        "dev:server": "concurrently -r 'yarn dev' 'yarn caddy' 'yarn dns' 'yarn mail'",
        "dev:backend": "concurrently -r 'yarn build:shared:watch' 'lerna run dev:backend --stream --parallel' 'yarn caddy' 'yarn dns' 'yarn mail'",
        "app:release": "cd devops && yarn build-code -s app && cd ../frontend/app/mobile && yarn ios && yarn android",
        "build:shared:watch": "npx nodemon --quiet --watch shared --watch backend/shared --ignore './shared/*/dist/' --ignore './shared/*/esm/dist/' --ignore './backend/shared/*/dist/' --ext .ts,.json --exec yarn build:shared",
        "build": "cd shared/locales && yarn build && cd ../utility && yarn build && cd ../structures && yarn build && cd ../..",
        "build:full": "cd shared/locales && yarn build:full && cd ../utility && yarn build:full && cd ../structures && yarn build:full && cd ../..",
        "clear": "rm -rf shared/*/dist shared/*/esm/dist frontend/app/*/dist backend/shared/*/dist backend/app/*/dist",
        "build:frontend": "yarn build && cd frontend/app/registration && yarn build:production && cd ../dashboard && yarn build:production && cd ../registration && yarn build:production",
        "build:structures": "cd shared/structures && yarn build && cd ../..",
        "build:shared": "yarn build && cd backend/shared/queues && yarn build && cd ../i18n && yarn build && cd ../email && yarn build && cd ../models && yarn build && cd ../logging && yarn build && cd ../middleware && yarn build && cd ../sql && yarn build && cd ../env && yarn build && cd ../..",
        "build:shared:full": "yarn build:full && cd backend/shared/queues && yarn build:full && cd ../i18n && yarn build:full && cd ../email && yarn build:full && cd ../models && yarn build:full && cd ../logging && yarn build:full && cd ../middleware && cd ../sql && yarn build:full && yarn build:full && cd ../env && yarn build:full && cd ../..",
        "build:locales": "cd shared/locales && yarn build && cd ../..",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.vue",
        "caddy": "caddy run --config .development/caddy.json",
        "dns": "export SERVER_IP=127.0.0.1 && cd .development && source loadenv.sh && coredns",
        "mail": "maildev --ip 0.0.0.0 --incoming-user username --incoming-pass password",
        "clear-depedencies": "rm -rf node_modules */node_modules **/node_modules"
    },
    "dependencies": {
        "@babel/runtime": "^7.15.4",
        "@sentry/tracing": "^6.13.3",
        "@sentry/vue": "^6.13.3",
        "@simonbackx/simple-encoding": "2.9.2",
        "@simonbackx/simple-errors": "^1.4.0",
        "@simonbackx/simple-networking": "1.16.0",
        "@simonbackx/vue-app-navigation": "1.28.0",
