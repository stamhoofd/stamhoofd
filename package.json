        "argon2": "^0.40.1",
        "chart.js": "^3.9.1",
        "core-js": "^3.20.1",
        "file-saver": "^2.0.5",
        "jsvat-next": "3.0.2",
        "jszip": "^3.7.1",
        "libphonenumber-js": "^1.9.39",
        "luxon": "^2.3.2",
        "path-browserify": "^1.0.1",
        "pdfkit": "0.15.0",
        "qrcode": "1.5.3",
        "sharp": "^0.32",
        "tslib": "^2.3.1",
