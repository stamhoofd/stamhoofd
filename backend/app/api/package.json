{
    "name": "@stamhoofd/backend",
    "version": "2.43.2",
    "main": "./dist/index.js",
    "exports": {
        ".": {
            "require": "./dist/index.js"
        }
    },
    "license": "UNLICENCED",
    "scripts": {
        "dev": "echo 'Waiting for shared backend packages...' && wait-on ../../shared/middleware/dist/index.js && echo 'Start building backend API' && concurrently -r 'yarn build --watch --preserveWatchOutput' \"wait-on ./dist/index.js && nodemon --quiet --inspect=5858 --watch dist --watch '../../../shared/*/dist/' --watch '../../shared/*/dist/' --ext .ts,.json,.sql,.js --watch .env.json --delay 1000ms --exec 'node --enable-source-maps ./dist/index.js' --signal SIGTERM\"",
        "dev:backend": "yarn dev",
        "build": "rm -rf ./dist/src/migrations && rm -rf ./dist/src/seeds && tsc -b",
        "build:full": "yarn clear && yarn build",
        "clear": "rm -rf ./dist",
        "start": "yarn build && node --enable-source-maps ./dist/index.js",
        "test": "jest --runInBand",
        "test:reset": "yarn build:full && jest --runInBand",
        "migrations": "yarn build:full && node ./dist/migrations.js",
        "lint": "eslint"
    },
    "devDependencies": {
        "@types/cookie": "^0.5.1",
        "@types/luxon": "3.4.2",
        "@types/mailparser": "3.4.4",
        "@types/mysql": "^2.15.20",
        "@types/node": "^20.12",
        "nock": "^13.5.1",
        "qs": "^6.11.2",
        "sinon": "^18.0.0"
    },
    "dependencies": {
        "@mollie/api-client": "3.7.0",
        "@simonbackx/simple-database": "1.25.0",
        "@simonbackx/simple-encoding": "2.15.1",
        "@simonbackx/simple-endpoints": "1.14.0",
        "@simonbackx/simple-logging": "^1.0.1",
        "@stamhoofd/backend-i18n": "2.43.2",
        "@stamhoofd/backend-middleware": "2.43.2",
        "@stamhoofd/email": "2.43.2",
        "@stamhoofd/models": "2.43.2",
        "@stamhoofd/queues": "2.43.2",
        "@stamhoofd/sql": "2.43.2",
        "@stamhoofd/structures": "2.43.2",
        "@stamhoofd/utility": "2.43.2",
        "archiver": "^7.0.1",
        "aws-sdk": "^2.885.0",
        "axios": "1.6.8",
        "cookie": "^0.5.0",
        "formidable": "3.5.1",
        "handlebars": "^4.7.7",
        "jsonwebtoken": "9.0.0",
        "luxon": "3.4.4",
        "mailparser": "3.7.0",
        "mockdate": "^3.0.2",
        "mysql": "^2.18.1",
        "node-rsa": "1.1.1",
        "openid-client": "^5.4.0",
        "postmark": "^4.0.5",
        "stripe": "^16.6.0"
    }
}
