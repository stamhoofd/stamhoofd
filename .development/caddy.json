{
    "apps": {
        "http": {
            "servers": {
                "stamhoofd": {
                    "listen": [
                        ":443",
                        ":80"
                    ],
                    "routes": [
                        {
                            "match": [
                                {
                                    "host": [
                                        "renderer.stamhoofd",
                                        "*.renderer.stamhoofd"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:9093"
                                        }
                                    ],
                                    "headers": {
                                        "request": {
                                            "set": {
                                                "x-real-ip": [
                                                    "{http.request.remote}"
                                                ]
                                            }
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "host": [
                                        "api.stamhoofd",
                                        "*.api.stamhoofd",
                                        "*.*.api.stamhoofd"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:9091"
                                        }
                                    ],
                                    "headers": {
                                        "request": {
                                            "set": {
                                                "x-real-ip": [
                                                    "{http.request.remote}"
                                                ]
                                            }
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "host": [
                                        "dashboard.stamhoofd",
                                        "*.dashboard.stamhoofd"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "load_balancing": {
                                        "retries": 5
                                    },
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:8080"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "host": [
                                        "shop.stamhoofd",
                                        "*.shop.stamhoofd"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "load_balancing": {
                                        "retries": 5
                                    },
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:8082"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "host": [
                                        "*.registration.stamhoofd",
                                        "*.*.registration.stamhoofd"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "load_balancing": {
                                        "retries": 5
                                    },
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:8081"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "vars_regexp": {
                                        "{http.request.host}": {
                                            "pattern": "^inschrijven\\."
                                        }
                                    }
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "load_balancing": {
                                        "retries": 5
                                    },
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:8081"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "load_balancing": {
                                        "retries": 5
                                    },
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:8082"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        },
        "tls": {
            "automation": {
                "policies": [
                    {
                        "subjects": [
                            "*.stamhoofd",
                            "*.shop.stamhoofd",
                            "*.dashboard.stamhoofd",
                            "*.api.stamhoofd",
                            "*.*.api.stamhoofd",
                            "*.renderer.stamhoofd",
                            "*.registration.stamhoofd",
                            "*.*.registration.stamhoofd"
                        ],
                        "on_demand": false,
                        "issuers": [
                            {
                                "module": "internal"
                            }
                        ]
                    },
                    {
                        "on_demand": true,
                        "issuers": [{
                            "module": "internal"
                        }]
                    }
                ],
                "on_demand": {
                    "rate_limit": {
                        "interval": "1d",
                        "burst": 200
                    }
                }
            }
        }
    }
}
