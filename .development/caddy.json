{
    "apps": {
        "http": {
            "servers": {
                "stamhoofd": {
                    "listen": [
                        ":443",
                        ":80"
                    ],
                    "routes": [
                        {
                            "match": [
                                {
                                    "host": [
                                        "api.admin.stamhoofd"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:9991"
                                        }
                                    ],
                                    "headers": {
                                        "request": {
                                            "set": {
                                                "x-real-ip": [
                                                    "{http.request.remote}"
                                                ]
                                            }
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "host": [
                                        "renderer.stamhoofd"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:9093"
                                        }
                                    ],
                                    "headers": {
                                        "request": {
                                            "set": {
                                                "x-real-ip": [
                                                    "{http.request.remote}"
                                                ]
                                            }
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "host": [
                                        "api.stamhoofd",
                                        "*.api.stamhoofd"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:9091"
                                        }
                                    ],
                                    "headers": {
                                        "request": {
                                            "set": {
                                                "x-real-ip": [
                                                    "{http.request.remote}"
                                                ]
                                            }
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "host": [
                                        "dashboard.stamhoofd"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:8080"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "host": [
                                        "admin.stamhoofd"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:8083"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "host": [
                                        "www.be.stamhoofd",
                                        "www.nl.stamhoofd"
                                    ],
                                    "path": [
                                        "/shop/*"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:8882"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "host": [
                                        "*.shop.stamhoofd",
                                        "shop.be.stamhoofd",
                                        "shop.nl.stamhoofd"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:8082"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "host": [
                                        "*.be.stamhoofd",
                                        "*.nl.stamhoofd"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:8081"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "vars_regexp": {
                                        "{http.request.host}": {
                                            "pattern": "^inschrijven\\."
                                        }
                                    }
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:8081"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:8082"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        },
        "tls": {
            "automation": {
                "policies": [
                    {
                        "subjects": [
                            "*.stamhoofd",
                            "*.shop.stamhoofd",
                            "shop.be.stamhoofd",
                            "shop.nl.stamhoofd",
                            "www.be.stamhoofd",
                            "www.nl.stamhoofd",
                            "dashboard.stamhoofd",
                            "*.be.stamhoofd",
                            "*.nl.stamhoofd",
                            "api.stamhoofd",   
                            "*.api.stamhoofd",
                            "api.admin.stamhoofd",
                            "admin.stamhoofd",
                            "renderer.stamhoofd"
                        ],
                        "on_demand": false,
                        "issuers": [
                            {
                                "module": "internal"
                            }
                        ]
                    },
                    {
                        "on_demand": true,
                        "issuers": [{
                            "module": "internal"
                        }]
                    }
                ],
                "on_demand": {
                    "rate_limit": {
                        "interval": "1d",
                        "burst": 50
                    },
                    "ask": "http://127.0.0.1:9091/v203/check-domain-cert"
                }
            }
        }
    }
}
